[user]
	name = Mitsuhiro Tanda
[core]
	excludesfile = ~/.gitignore_global
	attributesfile = ~/.gitattributes_global
	#autocrlf = input
	editor = vim --remote-tab-wait-silent
	pager = "LC_ALL=ja_JP.UTF-8 lv -c"
	preloadindex = true
[push]
	default = upstream
[rebase]
	stat = true
	autosquash = true
[color]
	#ui = auto
	status = auto
	diff = auto
	branch = auto
	interactive = auto
	grep = auto
[alias]
	b = branch
	ci = commit
	co = checkout
	cob = checkout -b
	d = diff
	dc = diff --cached
	g = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd%Cblue%cn %Cred%d %Creset%s'
	gr = grep --line-number --show-function --color --heading --break
	i = issue
	mg = merge
	rb = rebase
	st = status --short --branch
	up = pull --rebase
	n  = now --all --stat
	diffn = !git diff --no-ext-diff
	cancel = !git commit -a -m 'Temporary commit for cancel' && git reset --hard HEAD~
	fixup = commit --amend -C HEAD
	gsub = git-gsub
	graph = log --graph --decorate --oneline
	logg = log --stat --pretty=format:'%Cblue%h %Cgreen%ar %Cred%an %Creset%s %Cred%d'
	fetch-pulls = fetch origin +refs/pull/*:refs/remotes/pull/*
	pull-dry-run = !"git fetch origin; B=$(git rev-parse --abbrev-ref HEAD); git diff --stat --summary ${B}..origin/${B}"
	current-branch = rev-parse --abbrev-ref HEAD
[diff]
	external = git-diff-wrapper
	tool = vim-diff
	algorithm = patience
[pager]
	log = diff-highlight | lv -c
	show = diff-highlight | lv -c
	diff = diff-highlight | lv -c
[credential]
	helper = cache --timeout=3600
[include]
	path = .gitconfig.local
[difftool]
	prompt = false
[difftool "vim-diff"]
	cmd = vim -f '+next' '+execute \"DirDiff\" argv(0) argv(1)' $LOCAL $REMOTE
[difftool "vdwrap"]
	cmd = /Users/mitsuhiro.tanda/bin/git/vdwrap $LOCAL $REMOTE
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /opt/homebrew-cask/Caskroom/sourcetree/1.9.4.1/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[url "git@github.com:"]
	pushinsteadof = "https://github.com/"
	pushinsteadof = "git://github.com/"
[branch "master"]
	rebase = true
[pull]
	#rebase = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[ghq]
	root = /Users/mitsuhiro/src
