#!/bin/sh

# aliases
if [ -f $HOME/.sh_aliases ]; then
    source $HOME/.sh_aliases
fi

# function
if [ -f $HOME/.sh_function ]; then
    source $HOME/.sh_function
fi

## environmental variables
# set PATH so it includes user's private bin if it exists
if [ -d $HOME/bin ] ; then
    PATH=$HOME/bin:"${PATH}"
fi
if [ -d $HOME/local/bin ] ; then
    PATH=$HOME/local/bin:"${PATH}"
fi
export PATH

#export MAIL=/var/spool/mail/$USERNAME
#export LESS=-cex3M
export EDITOR='emacsclient -a vim'
export PAGER='lv'
export BROWSER='w3m'
export HTMLPAGER='w3m -T text/html -dump'
export TERMSCREEN='screen-bce'
export SVN_EDITOR='vim'

# for CPAN
export PERL5LIB=$HOME/local/lib/perl5/5.8.8:$HOME/local/lib/perl5/site_perl/5.8.8
export PERL_BADLANG=0

# OS specific environmental variables
case "`uname`" in
  "Linux")
  ;;
  "Darwin")
  MANPATH="/usr/local/share/man:/opt/local/share/man:/Developer/usr/share/man:/usr/X11/man:/usr/share/man:$MANPATH"
  ;;
esac
export MANPATH

if [ -f $HOME/.shrc.local ]; then
    source $HOME/.shrc.local
fi
