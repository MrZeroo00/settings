#!/bin/sh

## environmental variables
# set PATH so it includes user's private bin if it exists
if [ -d ${HOME}/bin ] ; then
    PATH=${HOME}/bin:"${PATH}"
fi
for i in `ls -d ${HOME}/bin/*`; do
  if [ -d $i ]; then
    PATH=$i:"${PATH}"
  fi
done
if [ -d ${HOME}/local/bin ] ; then
    PATH=${HOME}/local/bin:"${PATH}"
fi
export PATH


#export LC_TIME=ja_JP.UTF-8
#export LC_MONETARY=ja_JP.UTF-8
#export LC_MESSAGES=ja_JP.UTF-8
#export LC_CTYPE=ja_JP.UTF-8
#export LC_NUMERIC=ja_JP.UTF-8
#export LC_COLLATE=ja_JP.UTF-8


export LSCOLORS=exfxcxdxbxegedabagacad
export LS_COLORS='di=34:ln=35:so=32:pi=33:ex=31:bd=46;34:cd=43;34:su=41;30:sg=46;30:tw=42;30:ow=43;30'
#export MAIL=/var/spool/mail/${USERNAME}
#export LESS=-cex4M
export EDITOR='emacsclient -a vim -n'
export PAGER='lv'
export BROWSER='w3m'
export HTMLPAGER='w3m -T text/html -dump'
export TERMSCREEN='screen-bce'
export SVN_EDITOR='vim'
export GIT_EDITOR='vim'

# for CPAN
#export PERL5LIB=${HOME}/local/lib/perl5/5.8.8:${HOME}/local/lib/perl5/site_perl/5.8.8
#export PERL_BADLANG=0

# for Global
if [ -f ${HOME}/bin/gtags_load_libpath ]; then
    source ${HOME}/bin/gtags_load_libpath
fi

# OS specific environmental variables
case "${OS}" in
  "Linux")
  ;;
  "Darwin")
  LANG=ja_JP.UTF-8
  MANPATH="/usr/local/share/man:/opt/local/share/man:/Developer/usr/share/man:/usr/X11/man:/usr/share/man:${MANPATH}"
  INFOPATH="/opt/local/share/info:/Developer/usr/share/info:/usr/share/info"
  ;;
  "Cygwin")
  LANG=ja_JP.UTF-8
  TERM=cygwin
  export TZ='JST-9'
  export JLESSCHARSET='japanese-sjis'
  ;;
esac
export LANG
export TERM
export MANPATH
export INFOPATH


# aliases
if [ -f ${HOME}/.sh_aliases ]; then
    source ${HOME}/.sh_aliases
fi

# function
if [ -f ${HOME}/.sh_function ]; then
    source ${HOME}/.sh_function
fi

# local setting
if [ -f ${HOME}/.shrc.local ]; then
    source ${HOME}/.shrc.local
fi
