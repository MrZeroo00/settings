#!/bin/sh

function title() {
  printf "\033]2;$1\007"
}

function singleton() {
  if [ -z "`ps ax | grep $1 | grep -v grep`"]; then
    eval "$@"
  fi
}

function ehist() {
  if [ -n "${_HISTFILE}" ]; then
    HISTFILE=${_HISTFILE}
    _HISTFILE=''
  fi
}

function dhist() {
  if [ -z "${_HISTFILE}" ]; then
    _HISTFILE=${HISTFILE}
    HISTFILE=''
  fi
}
