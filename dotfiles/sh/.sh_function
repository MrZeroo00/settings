#!/bin/sh

function col {
  awk -v col=$1 '{print $col}'
}

function skip {
  n=$(($1 + 1))
  cut -d' ' -f$n-
}

function isemacs() {
  if [ -z "${EMACS}" ]; then
    return 1
  else
    return 0
  fi
}

# comment out temporally
#function title() {
#  printf "\033]2;$1\007"
#}

function singleton() {
  if [ -z "`ps ax | grep $1 | grep -v grep`"]; then
    eval "$@"
  fi
}

function ehist() {
  if [ -n "${_HISTFILE}" ]; then
    HISTFILE=${_HISTFILE}
    _HISTFILE=''
  fi
}

function dhist() {
  if [ -z "${_HISTFILE}" ]; then
    _HISTFILE=${HISTFILE}
    HISTFILE=''
  fi
}

function nfind() {
  find . -name "*$1*"
}

function git_diff() {
  git diff --no-ext-diff -w "$@" | vim -R -
}

case "${OS}" in
  "Darwin")
  growl() { echo -e $'\e]9;'${1}'\007' ; return ; }

  function docker-enter() {
    boot2docker ssh '[ -f /var/lib/boot2docker/nsenter ] || docker run --rm -v /var/lib/boot2docker/:/target jpetazzo/nsenter'
    boot2docker ssh -t sudo /var/lib/boot2docker/docker-enter "$@"
  }
  ;;
  "Cygwin")
  function updatedb_cygwin() {
    updatedb --prunepaths='/proc
                           /c/Program.Files
                           /c/Documents.and.Settings/[^/]*/Local.Settings/Temp
                           /c/Documents.and.Settings/[^/]*/Local.Settings/Temporary.Internet.Files
                           /c/Documents.and.Settings/[^/]*/Local.Settings/Application.Data/Mozilla/Firefox/Profiles/[^/]*/Cache
                           /[^/]*/System.Volume.Information
                           /c/WINDOWS' \
             --localpaths='/c/home
                           /c/work'
  }
  ;;
esac

# local setting
if [ -f ${HOME}/.sh_function.`hostname -s`.local ]; then
  source ${HOME}/.sh_function.`hostname -s`.local
fi
