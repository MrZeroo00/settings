#!/bin/sh

## aliases
# enable color support of ls and also add handy aliases
if [ "${TERM}" != "dumb" ]; then
    #eval "`dircolors -b`"
    alias ls='ls -G'
    #alias dir='ls --color=auto --format=vertical'
    #alias vdir='ls --color=auto --format=long'
fi

# some more ls aliases
alias ll='ls -l'
alias la='ls -a'
alias lA='ls -A'

alias j='jobs'
alias pu='pushd'
alias po='popd'
alias d='dirs -v'
alias h='history'

# etc
alias wcd=/usr/lib/wcd/wcd.exec
alias number='screen_number'
alias sl='ls'
alias rm='rm -i'
alias grep='egrep'
alias psgrep='ps aux | egrep'
alias w3m='LANG="" w3m'
alias web='w3m http://www.google.co.jp/'
alias gdb='gdb -silent'
alias gvim-remote='gvim --remote-silent'

# OS specific aliases
case "`uname`" in
  "Linux")
  alias pbcopy='xclip -selection clipboard'
  alias pbpaste='xclip -selection clipboard -o'
  alias open='gnome-open'
  #alias emacs='XMODIFIERS=@im=none emacs-snapshot-gtk'
  alias emacs='emacsclient -a emacs -n'
  alias ack='ack-grep'
  ;;
  "Darwin")
  alias addr2line='gaddr2line'
  alias nm='gnm'
  alias objdump='gobjdump'
  alias readelf='greadelf'
  alias ldd='otool -L'
  alias emacs='/Applications/MacPorts/Emacs.app/Contents/MacOS/Emacs'
  alias ql='qlmanage -p "$@" >& /dev/null'
  ;;
esac

if [ -x `which tscreen` ]; then
  alias screen='tscreen'
fi

if [ -f ${HOME}/.sh_aliases.local ]; then
    source ${HOME}/.sh_aliases.local
fi
