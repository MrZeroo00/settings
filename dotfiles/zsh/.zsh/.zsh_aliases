if [ -f ${HOME}/.sh_aliases ]; then
    source ${HOME}/.sh_aliases
fi

# vared variant which splits arrays onto separate lines
alias lvared="IFS=\$'\n' vared"

alias mv='nocorrect mv'       # no spelling correction on mv
alias cp='nocorrect cp'       # no spelling correction on cp
alias mkdir='nocorrect mkdir' # no spelling correction on mkdir
alias lsd='ls -ld *(-/DN)'

# http://www.ayu.ics.keio.ac.jp/~mukai/tips/zshdir.html
alias gd='dirs -v; echo -n "select number: "; read newdir; cd +"$newdir'


# fast directory change
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ......='cd ../../../../..'
alias .......='cd ../../../../../..'


# global aliases
alias -g L='|lv'
alias -g V='|vim -R -'
alias -g H='|head'
alias -g T='|tail'
alias -g G='|grep'
alias -g E="| xargs vim"
alias -g O="| xargs open"
alias -g P="| peco"
alias -g C="| pbcopy"
alias -g B='&|'
alias -g HL='--help'
alias -g LL='2>&1 | lv'
alias -g TE='2>&1 | tee'
alias -g NE='2> /dev/null'
alias -g NUL='> /dev/null 2>&1'
alias -g GBR='`git branch | peco --prompt "GIT BRANCH>" | sed -e "s/^\*[ ]*//g"`'
alias -g GBRR='`git branch -a | peco --prompt "GIT BRANCH>" | head -n 1 | sed -e "s/^\*\s*//g"`'
alias -g GR='`git remote | peco --prompt "GIT REMOTE>" | head -n 1`'
alias -g GH='$(git-hash)'
alias -g GF='$(git-changed-files)'
alias -g GH='`curl -sL https://api.github.com/users/mtanda/repos | jq -r ".[].full_name" | peco --prompt "GITHUB REPOS>" | head -n 1`'
alias -g GLR='`git branch -a | peco --query "remotes/ " --prompt "GIT REMOTE BRANCH>" | head -n 1 | sed "s/^\*\s*//" | sed "s/remotes\/[^\/]*\/\(\S*\)/\1 \0/"`'


# relate file extensions to open command
extensions=("txt" "htm" "html" "pdf" "png" "jpg" "jpeg" "bmp" "gif" "mpg" "mpeg" "mng" "wmv" "rm" "mov" "c" "cpp" "h" "hpp")
for i in ${extensions}; do
  alias -s $i=open
done
unset extensions
#preexec() { file=$1; if [ -f $file ]; then open $file; fi; }


# other suffix alias
alias -s rb='ruby'
alias -s py='python'
alias -s php='php -f'

function runcpp () {
  g++ -O2 $1
  shift
  ./a.out $@
}
alias -s {c,cpp}='runcpp'


## suffix aliases
source ${HOME}/.zsh/function/zsh_commandselector.sh


# directory aliases
hash -d src="${HOME}/src"


# local setting
if [ -f ${HOME}/.zsh/.zsh_aliases.`hostname -s`.local ]; then
  source ${HOME}/.zsh/.zsh_aliases.`hostname -s`.local
fi
